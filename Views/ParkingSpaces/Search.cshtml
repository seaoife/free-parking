                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="EndTime" /> @Html.DisplayNameFor(model => model.EndTime)
                        </label>
                    </div>*@

                        <div class="col-center">
                            <input type="submit" value="Go to Map" class="btnbtn-primarybtn-md4" />
                        </div>
                        <br /><br /><br /><br />
                        <div class="pos-bottom">
                            <a href="#" onClick="history.go(-1) " class="previous round">&#8249;</a>
                        </div>
