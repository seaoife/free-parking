 @model FreePark.Models.ParkInputPage

@{
    ViewData["Title"] = "Create";
}


<head>
    <link href="@Url.Content("~/css/searchParkingSpaces.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="searchParkingSpaces.css" />
    <style>
        .navbar-brand {
            color: white !important;
        }

        .navbar {
            background-color: #009933 !important;
        }

