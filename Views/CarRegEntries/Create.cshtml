
@model FreePark.Models.CarRegEntry

@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link href="@Url.Content("~/css/CarRegEntries.css")" rel="stylesheet" type="text/css" />
    <script> src="@Url.Content("~/js/spinner.js")" language="javascript" type="text/javascript"</script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/CarRegEntries.css" />
    <style>

        .pageTitle {
            background: none;
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
        }
    </style>
</head>

<h4 class="pageTitle5">Enter Car Registration</h4>
<div class="centerBlock">
    <div class="container">
        <div class="box">
            <div class="icon"><i class='fas fa-car-side'></i></div>
            <div class="content">
                <div class="row">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-center">
                            <label asp-for="CarReg" class="control-label"></label>
                            <input asp-for="CarReg" class="form-control" maxlength="40" />
                            <span asp-validation-for="CarReg" class="text-danger"></span>
                        </div>
                        <br /><br />
                        <div class="pos-cent">
                            <a class="btnbtn-primarybtn-md5" role="button" onclick="this.classList.toggle('button--loading')" aria-disabled="true" asp-controller="CarDetails" asp-action="Index">
                                <span class="button_text">Next</span>
                            </a>
                        </div>
                        <br /><br />
                        <div class="cent-ahref">
                            <a href="#" onClick="history.go(-1) " class="previous round">&#8249;</a>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const theButton = document.querySelector(".btnbtn-primarybtn-md5");

        theButton.addEventListener("click", () => {
            theButton.classList.add("button--loading");

    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }
