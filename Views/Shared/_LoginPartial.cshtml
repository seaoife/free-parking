@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<head>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link href="@Url.Content("~/css/navlinksx2.css?v=4")" rel="stylesheet" type="text/css" />
    @*<link rel="stylesheet" type="text/css" href="carDetailsCss.css" />*@
    <style>
       .position{
          
           float:left;
           padding-right:40%;
           color:white !important;

        }
      /* .nav-item{
           text-decoration-color:white !important;
       }*/
        .text-dark1 a{
            color: white !important;


        }
        li {
            border-right: 1px solid #bbb;
        }

            li:last-child {
                border-right: none;
            }
    </style>
</head>

<ul class="navbar-nav position">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark1" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class='fas fa-user-edit' style='font-size:20px'></i> @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark1">Logout</button>
            </form>
        </li>
    }
</ul>
