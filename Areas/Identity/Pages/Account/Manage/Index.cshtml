@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<head>
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/images/favicon.ico")">
    <link href="@Url.Content("~/css/manageLoginUpdateProfile.css")" rel="stylesheet" type="text/css" />

</head>
<div class="container">
    <div class="box">
        <div class="icon"><i class='fas fa-car-side'></i></div>
        <div class="content">
            <h4>Update Profile</h4>
            <partial name="_StatusMessage" model="Model.StatusMessage" />
            <div>
                <div>
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input asp-for="Username" class="form-check-input10" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber"></label>
                            <input asp-for="Input.PhoneNumber" class="form-check-input10" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <button id="update-profile-button" type="submit" class="btnbtn-primarybtn-md10">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
